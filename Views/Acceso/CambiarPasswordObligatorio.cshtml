@{
    Layout = null;
    var username = User.Identity?.Name ?? "Usuario";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cambiar Contraseña - Avícola App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        .password-input {
            background-color: #f0f2f5;
            border: none;
            height: 50px;
            padding-left: 15px;
            border-radius: 8px;
        }

        .password-input:focus {
            background-color: #e4e6e9;
            box-shadow: none;
            border: 1px solid #0d6efd;
        }

        .alert-warning-custom {
            background-color: #fff3cd;
            border: 2px solid #ffc107;
            border-radius: 8px;
        }

        .step-indicator {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background-color: #ffc107;
            color: white;
            font-weight: bold;
            font-size: 20px;
            margin: 0 auto 20px;
        }
    </style>
</head>
<body class="bg-white">

    <div class="container-fluid p-0 overflow-hidden">
        <div class="row g-0 vh-100">

            <div class="col-md-6 d-flex align-items-center justify-content-center bg-white p-5">
                <div class="w-100" style="max-width: 450px;">

                    <div class="mb-4 text-center">
                        <div class="step-indicator">
                            <i class="bi bi-key-fill"></i>
                        </div>
                        <h2 class="fw-bold text-dark mb-2">Cambiar Contraseña</h2>
                        <p class="text-muted">Por favor, cambía tu contraseña temporal por una nueva.</p>
                    </div>

                    <div class="alert alert-warning-custom mb-4">
                        <div class="d-flex align-items-start">
                            <i class="bi bi-info-circle-fill me-3 mt-1"></i>
                            <div>
                                <strong>Aviso de Seguridad</strong>
                                <p class="mb-0 small mt-1">
                                    Debes cambiar tu contraseña antes de acceder al sistema. 
                                    Esta es una medida de seguridad obligatoria en tu primer acceso.
                                </p>
                            </div>
                        </div>
                    </div>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger mb-4 rounded-3">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            @foreach (var modelState in ViewData.ModelState.Values)
                            {
                                @foreach (var error in modelState.Errors)
                                {
                                    <div>@error.ErrorMessage</div>
                                }
                            }
                        </div>
                    }

                    <form action="/Acceso/CambiarPasswordObligatorio" method="post" id="formCambiarPassword">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label class="form-label text-muted small fw-bold">USUARIO</label>
                            <div class="alert alert-light border-0 p-3 mb-0">
                                <span class="fw-bold text-dark">@username</span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label text-muted small fw-bold">CONTRASEÑA ACTUAL</label>
                            <div class="input-group">
                                <input type="password" 
                                       name="passwordActual" 
                                       id="passwordActual"
                                       class="form-control password-input" 
                                       placeholder="Ingresá tu contraseña actual" 
                                       required />
                                <button class="btn btn-outline-secondary" type="button" id="toggleActual" style="border: none; background-color: #f0f2f5;">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label text-muted small fw-bold">CONTRASEÑA NUEVA</label>
                            <div class="input-group">
                                <input type="password" 
                                       name="passwordNueva" 
                                       id="passwordNueva"
                                       class="form-control password-input" 
                                       placeholder="Ingresá tu nueva contraseña" 
                                       required />
                                <button class="btn btn-outline-secondary" type="button" id="toggleNueva" style="border: none; background-color: #f0f2f5;">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            <small class="text-muted d-block mt-2">Mínimo 6 caracteres</small>
                        </div>

                        <div class="mb-4">
                            <label class="form-label text-muted small fw-bold">CONFIRMAR CONTRASEÑA</label>
                            <div class="input-group">
                                <input type="password" 
                                       name="passwordConfirmar" 
                                       id="passwordConfirmar"
                                       class="form-control password-input" 
                                       placeholder="Confirmá tu nueva contraseña" 
                                       required />
                                <button class="btn btn-outline-secondary" type="button" id="toggleConfirmar" style="border: none; background-color: #f0f2f5;">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            <div id="passwordMatchError" class="text-danger small mt-2" style="display: none;">
                                Las contraseñas no coinciden
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" 
                                    class="btn btn-primary py-2 fw-bold rounded-pill shadow-sm" 
                                    style="background-color: #0d6efd; border:none;">
                                <i class="bi bi-check-circle me-2"></i>Cambiar Contraseña
                            </button>
                        </div>
                    </form>

                    <div class="mt-4 text-center text-muted small">
                        &copy; 2026 AvicolaApp - Sistema de Gestión
                    </div>
                </div>
            </div>

            <div class="col-md-6 d-none d-md-block login-image-container p-0">
            </div>

        </div>
    </div>

    <script>
        // Toggle password visibility
        function togglePasswordVisibility(inputId, buttonId) {
            const input = document.getElementById(inputId);
            const button = document.getElementById(buttonId);
            
            if (input.type === 'password') {
                input.type = 'text';
                button.innerHTML = '<i class="bi bi-eye-slash"></i>';
            } else {
                input.type = 'password';
                button.innerHTML = '<i class="bi bi-eye"></i>';
            }
        }

        // Event listeners para toggle
        document.getElementById('toggleActual').addEventListener('click', function(e) {
            e.preventDefault();
            togglePasswordVisibility('passwordActual', 'toggleActual');
        });

        document.getElementById('toggleNueva').addEventListener('click', function(e) {
            e.preventDefault();
            togglePasswordVisibility('passwordNueva', 'toggleNueva');
        });

        document.getElementById('toggleConfirmar').addEventListener('click', function(e) {
            e.preventDefault();
            togglePasswordVisibility('passwordConfirmar', 'toggleConfirmar');
        });

        // Validación en tiempo real
        const passwordNueva = document.getElementById('passwordNueva');
        const passwordConfirmar = document.getElementById('passwordConfirmar');
        const passwordMatchError = document.getElementById('passwordMatchError');

        function validarCoincidencia() {
            if (passwordConfirmar.value && passwordNueva.value !== passwordConfirmar.value) {
                passwordMatchError.style.display = 'block';
            } else {
                passwordMatchError.style.display = 'none';
            }
        }

        passwordNueva.addEventListener('input', validarCoincidencia);
        passwordConfirmar.addEventListener('input', validarCoincidencia);

        // Validación al enviar
        document.getElementById('formCambiarPassword').addEventListener('submit', function(e) {
            if (passwordNueva.value !== passwordConfirmar.value) {
                e.preventDefault();
                passwordMatchError.style.display = 'block';
                return false;
            }
        });
    </script>

</body>
</html>
